<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.userp.detecttest.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/itemColor"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/speedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current speed : 0 km/h"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/resultSpeedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I'm not in the car"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/itemColor"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/locationTextView"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Magnetic Field Sensor" />
        <TextView
            android:id="@+id/magneticMaxValueTextView"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max value is ..." />
        <TextView
            android:id="@+id/magneticValueTextView"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="value is ..." />
        <TextView
            android:id="@+id/resultMagneticTextView"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Where i am?" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/itemColor"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/findedBeaconTextView"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beacon State" />
        <TextView
            android:id="@+id/resultBeaconTextView"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No working.." />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/resultTextView"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Who is Driver?" />
    </LinearLayout>

    <Button
        android:id="@+id/startBeaconMonitoringBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Beacon Monitoring" />

</LinearLayout>
