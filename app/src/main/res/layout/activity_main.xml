<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.userp.detecttest.MainActivity">

    <Button
        android:id="@+id/startBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button" />

    <TextView
        android:id="@+id/speedTextView"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Speed!" />
    <TextView
        android:id="@+id/locationTextView"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location!" />

    <Button
    android:id="@+id/startBeaconBtn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Start Beacon Transmitter" />
    <TextView
        android:id="@+id/findedBeaconTextView"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finding Beacon..." />

    <Button
        android:id="@+id/startBeaconMonitoringBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Beacon Monitoring" />

</LinearLayout>
